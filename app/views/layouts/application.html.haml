!!! XML
!!!
%html
  %head
    %title Cemetery
  = stylesheet_link_tag 'application', media: 'all'
  = stylesheet_link_tag params[:controller]
  = javascript_include_tag 'application'
  = csrf_meta_tags
  = yield :metatags

%body
  %section
    %header#header
      = render partial: 'layouts/header'
    #content
      - if flash[:notice]
        .notice= flash[:notice]
      = yield
    %footer#footer
      = render partial: 'layouts/footer'
